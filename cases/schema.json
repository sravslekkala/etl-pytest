{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "row_count",
              "query_expect",
              "null_check",
              "duplicate_check",
              "schema_check",
              "scd2_health"
            ]
          },
          "params": {
            "type": "object"
          }
        },
        "required": [
          "name",
          "type",
          "params"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "cases"
  ],
  "additionalProperties": false
}